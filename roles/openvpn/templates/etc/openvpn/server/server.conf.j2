# Created from examples/sample-config-files/server.conf
# Name: {{ openvpn_server_name }}
port {{ openvpn_port }}
proto {{ openvpn_proto }}
dev tun
ca ca.crt
cert server.crt
key server.key  # This file should be kept secret
dh dh2048.pem
server {{ openvpn_server_ip }} {{ openvpn_server_mask }}
ifconfig-pool-persist /var/log/openvpn/ipp.txt
keepalive 10 120
tls-auth ta.key 0 # This file is secret
cipher AES-256-CBC
persist-key
persist-tun
status /var/log/openvpn/openvpn-status.log
verb {{ openvpn_verb }}
explicit-exit-notify 1
# Added as I prefer it like this
#multihome
#script-security {{ openvpn_script_security }}
#client-config-dir {{ openvpn_client_config_dir }}
#user nobody
#group nobody
#management /var/run/openvpn.socket unix
#management-client-user root

